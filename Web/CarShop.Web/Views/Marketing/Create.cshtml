@model CarShop.Web.ViewModels.Marketing.CreateEmailMarketingViewModel
@{
    this.ViewData["Title"] = "Create marketing post";
}
<h1>Marketing 1.0v</h1>
<p>This is our marketing page, you can only see this page if you are in role <strong>"Maketing"</strong> or <strong>"Admin"</strong>, in this page you can send marketing emails.</p>

<p>Create marketing post:</p>
<p>Learn more about email marketing...</p>
<div class="accordion" id="accordionExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
               <strong>How to Create marketing post?</strong>
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body">
               Fill all the forms in the form bellow and click "Send email". <strong>Important:</strong> Don't sent nudes!
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                <strong>What will happend when we post?</strong>
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <strong>You will send email</strong> to every registered persen in the site.
            </div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingThree">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                <strong>Is it free?</strong>
            </button>
        </h2>
        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                <strong>Yes!</strong> CarShop integrated free email sender via twillio, so feel free to send emails for free! 
            </div>
        </div>
    </div>
</div>
<hr>
<form method="post" class="col-md-6 offset-3 p-3 bg-info bg-opacity-10 border border-info rounded-end">
    <div asp-validation-summary="All" class="text-danger"></div>
    <p><strong>Email sender form</strong></p>    
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <hr />
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Send email
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Email marketing check</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    You are about to send this message to every user email who is registrated in the platform, <strong>Do you want to continue?</strong>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" as class="btn btn-primary" value="Send" />
                </div>
            </div>
        </div>
    </div>


</form>


